{
    "extends": [
        "next", 
        "next/core-web-vitals", 
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],

    "env": {
		"browser": true,
		"es2021": true
	},

	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react",
        "prettier"
	],
	"rules": {
		"indent": [
			"error",
			4
		],
		"semi": [
			"error",
			"always"
		],
        
        "react/prop-types": 0
	}
}
